<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <bean id="knight" class="com.megopalec3.entities.BraveKnight">
        <constructor-arg ref="quest" />
    </bean>

    <bean id="quest"
          class="com.megopalec3.entities.SlayDragonQuest" />

    <bean id="minstrel"
          class="com.megopalec3.entities.Minstrel" />

    <aop:config>
        <aop:aspect ref="minstrel">
            <!-- Объявление точки внедрения -->
            <aop:pointcut id="embark"
                          expression="execution(* *.embarkOnQuest(..))" />
            <!-- Операция, выполняемая до -->
            <aop:before pointcut-ref="embark"
                        method="singBeforeQuest"/>
            <!-- Операция, выполняемая после -->
            <aop:after pointcut-ref="embark"
                       method="singAfterQuest"/>
        </aop:aspect>
    </aop:config>
</beans>